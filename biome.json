{
	"$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
	"files": {
		"includes": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.mts"],
		"ignoreUnknown": true
	},
	"overrides": [
		{
			"includes": ["**/payload-types.ts"],
			"linter": {
				"enabled": false
			},
			"formatter": {
				"enabled": false
			}
		}
	],
	"formatter": {
		"enabled": true,
		"indentStyle": "tab",
		"indentWidth": 2
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
